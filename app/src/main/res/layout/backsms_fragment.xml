<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/order_header"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:screenOrientation="landscape"
    android:weightSum="1">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:text="@string/from_TP"
        android:textColor="#000000" />

    <Spinner
        android:id="@+id/SpinTP"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/textView4"
        android:gravity="center_vertical|center_horizontal"
        android:paddingTop="3dp"
        android:paddingBottom="3dp" />

    <TextView
        android:id="@+id/textView25"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@+id/textView4"
        android:layout_alignParentStart="true"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:text="@string/sms_head"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/textView26"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@+id/textView25"
        android:layout_alignParentStart="true"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:text="@string/sms_text"
        android:textColor="#000000" />

    <EditText
        android:id="@+id/edSmsHead"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView25"
        android:layout_toEndOf="@+id/textView25" />

    <EditText
        android:id="@+id/edSmsText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView26"
        android:layout_toEndOf="@+id/textView26"
        android:gravity="top"
        android:inputType="textMultiLine"
        android:lines="8"
        android:minLines="6"
        android:singleLine="false"
        android:text="vzxcvzxcvzxcvzxv" />

</RelativeLayout>