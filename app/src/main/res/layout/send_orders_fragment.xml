<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/orders_journal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:screenOrientation="landscape"
        android:weightSum="1">

    <TextView
            android:id="@+id/textView18"
            android:layout_width="120dp"
            android:layout_height="25dp"
            android:layout_toRightOf="@+id/textView19"
            android:background="@drawable/table_header"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/journZakazDate"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#000000" />

    <TextView
            android:id="@+id/textView21"
            android:layout_width="200dp"
            android:layout_height="25dp"
            android:layout_toRightOf="@+id/textView18"
            android:background="@drawable/table_header"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/journContr"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#000000" />

    <TextView
            android:id="@+id/textView22"
            android:layout_width="400dp"
            android:layout_height="25dp"
            android:layout_toLeftOf="@+id/textView20"
            android:layout_toRightOf="@+id/textView21"
            android:background="@drawable/table_header"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/journAddr"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#000000" />

    <GridView
            android:id="@+id/listSMS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView18"
            android:layout_alignParentLeft="true" />

    <TextView
            android:id="@+id/textView19"
            android:layout_width="120dp"
            android:layout_height="25dp"
            android:layout_alignTop="@+id/textView18"
            android:layout_alignParentLeft="true"
            android:background="@drawable/table_header"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/journStatus"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#000000" />

    <TextView
            android:id="@+id/textView20"
            android:layout_width="120dp"
            android:layout_height="25dp"
            android:layout_above="@+id/listSMS"
            android:layout_alignParentRight="true"
            android:background="@drawable/table_header"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/journSum"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#000000" />
</RelativeLayout>