<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="true"
        android:orientation="horizontal"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:screenOrientation="landscape">

    <TextView
            android:id="@+id/ColNomID"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_span="2"
            android:paddingLeft="5sp"
            android:paddingTop="10sp"
            android:paddingBottom="10sp"
            android:visibility="invisible" />

    <TextView
            android:id="@+id/ColNomGRUPID"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_span="2"
            android:paddingLeft="5sp"
            android:paddingTop="10sp"
            android:paddingBottom="10sp"
            android:visibility="invisible" />

    <TextView
            android:id="@+id/ColNomSGIID"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_span="2"
            android:paddingLeft="5sp"
            android:paddingTop="10sp"
            android:paddingBottom="10sp"
            android:visibility="invisible" />

    <TextView
            android:id="@+id/ColNomCod"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_alignBottom="@+id/ColNomDescr"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/ColNomPhoto"
            android:layout_toRightOf="@+id/ColNomPhoto"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:gravity="center_vertical|center_horizontal"
            android:paddingLeft="5sp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="TextView"
            android:textColor="#000000" />

    <TextView
            android:id="@+id/ColNomDescr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/ColNomMP"
            android:layout_toEndOf="@+id/ColNomMH"
            android:clickable="false"
            android:ellipsize="none"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:gravity="left|center_vertical"
            android:lines="2"
            android:maxLines="2"
            android:paddingLeft="5sp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:scrollHorizontally="false"
            android:singleLine="false"
            android:textColor="#000000" />

    <TextView
            android:id="@+id/ColNomOst"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_alignBottom="@+id/ColNomPrice"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/ColNomPrice"
            android:layout_toLeftOf="@+id/ColNomPrice"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:gravity="center_vertical|center_horizontal"
            android:paddingLeft="5sp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="TextView"
            android:textColor="#000000" />

    <TextView
            android:id="@+id/ColNomPrice"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_alignBottom="@+id/ColNomZakaz"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/ColNomZakaz"
            android:layout_toLeftOf="@+id/ColNomZakaz"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:gravity="center_vertical|center_horizontal"
            android:numeric="decimal"
            android:paddingLeft="5sp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="TextView"
            android:textColor="#000000" />

    <TextView
            android:id="@+id/ColNomPhoto"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/ColNomCod"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/ColNomPosition"
            android:gravity="center_vertical|center_horizontal"
            android:text="     "
            android:textAlignment="center" />

    <TextView
            android:id="@+id/ColNomVkorob"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_alignBottom="@+id/ColNomCod"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/ColNomOst"
            android:layout_toLeftOf="@+id/ColNomOst"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:gravity="center_vertical|center_horizontal"
            android:paddingLeft="5sp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textColor="#000000" />

    <TextView
            android:id="@+id/ColNomMP"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_alignBottom="@+id/ColNomDescr"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/ColNomVkorob"
            android:layout_toLeftOf="@+id/ColNomVkorob"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:gravity="center_vertical|center_horizontal"
            android:paddingLeft="5sp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textColor="#000000" />

    <TextView
            android:id="@+id/ColNomMH"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/ColNomDescr"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/ColNomCod"
            android:gravity="center_vertical|center_horizontal"
            android:text="     "
            android:textAlignment="center"
            android:textColor="#923a3a" />

    <TextView
            android:id="@+id/ColNomPosition"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/ColNomPhoto"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:gravity="center_vertical|center_horizontal"
            android:text="     "
            android:textAlignment="center"
            android:textColor="#000000" />

    <ImageButton
            android:id="@+id/btMinus"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignStart="@+id/btPlus"
            android:layout_alignTop="@+id/btPlus"
            android:layout_marginTop="20dp"
            android:clickable="false"
            android:focusable="false"
            app:srcCompat="@android:drawable/arrow_down_float" />

    <ImageButton
            android:id="@+id/btPlus"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:clickable="false"
            android:focusable="false"
            app:srcCompat="@android:drawable/arrow_up_float" />

    <TextView
            android:id="@+id/ColNomZakaz"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/ColNomVkorob"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/btMinus"
            android:background="@drawable/rounded_corner"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:gravity="center_vertical|center_horizontal"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textColor="#004706" />

</RelativeLayout>