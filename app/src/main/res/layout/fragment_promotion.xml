<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.report.KPIFragmentOld">

    <TextView
            android:id="@+id/tvPreShow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Нажмите, чтобы увидеть таблицу"
            android:gravity="center"
            android:textColor="#000"
            android:textSize="20sp"/>

    <RelativeLayout
            android:id="@+id/layoutWithActionTable"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

        <RelativeLayout
                android:id="@+id/headersLayoutAction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="10dp">

            <TextView
                    android:id="@+id/tvAction"
                    android:layout_width="@dimen/actionDescWidth"
                    android:layout_height="@dimen/tableHeadersHeight"
                    android:background="@drawable/table_header"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="Акция"
                    android:textColor="#000000" />

            <TextView
                    android:id="@+id/tvDateStart"
                    android:layout_width="@dimen/ActionElemWidth"
                    android:layout_height="@dimen/tableHeadersHeight"
                    android:background="@drawable/table_header"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="Дата начала"
                    android:textColor="#000000"
                    android:layout_toEndOf="@+id/tvAction" />

            <TextView
                    android:id="@+id/tvDateEnd"
                    android:layout_width="@dimen/ActionElemWidth"
                    android:layout_height="@dimen/tableHeadersHeight"
                    android:background="@drawable/table_header"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="Дата окончания"
                    android:textColor="#000000"
                    android:layout_toEndOf="@+id/tvDateStart" />

            <TextView
                    android:id="@+id/tvFactValue"
                    android:layout_width="@dimen/ActionElemWidth"
                    android:layout_height="@dimen/tableHeadersHeight"
                    android:background="@drawable/table_header"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="Факт"
                    android:textColor="#000000"
                    android:layout_toEndOf="@+id/tvDateEnd" />

            <TextView
                    android:id="@+id/tvPlanValue"
                    android:layout_width="@dimen/ActionElemWidth"
                    android:layout_height="@dimen/tableHeadersHeight"
                    android:background="@drawable/table_header"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="План"
                    android:textColor="#000000"
                    android:layout_toEndOf="@+id/tvFactValue" />

            <TextView
                    android:id="@+id/tvPercent"
                    android:layout_width="150dp"
                    android:layout_height="@dimen/tableHeadersHeight"
                    android:background="@drawable/table_header"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="%"
                    android:textColor="#000000"
                    android:layout_toEndOf="@+id/tvPlanValue"
                    android:layout_alignParentEnd="true" />
        </RelativeLayout>

        <View
                android:id="@+id/divide2"
                android:layout_width="match_parent"
                android:layout_below="@+id/headersLayoutAction"
                android:layout_height="@dimen/dividerHeaderWidth"
                android:layout_marginBottom="5dp"
                android:background="@color/dividerColor"
                android:layout_marginHorizontal="10dp" />

        <GridView
                android:id="@+id/actionGridView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/divide2"
                android:layout_marginHorizontal="10dp" />
    </RelativeLayout>

</RelativeLayout>