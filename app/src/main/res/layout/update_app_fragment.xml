<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="false"
    android:focusable="false"
    android:focusableInTouchMode="false"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txtNotification"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/btUpdateApp"
        android:textColor="#334d2f"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btUpdateApp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView24"
        android:layout_alignLeft="@+id/textView24"
        android:layout_centerVertical="true"
        android:background="@android:drawable/btn_default"
        android:text="@string/appInstallUpdate"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/textView28"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignStart="@+id/btUpdateApp"
        android:layout_alignLeft="@+id/btUpdateApp"
        android:layout_alignParentBottom="true"
        android:text=""
        android:textColor="#ff2a1b"
        android:textSize="18dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView23"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="21dp"
        android:layout_marginLeft="21dp"
        android:layout_marginTop="19dp"
        android:singleLine="true"
        android:text="@string/appCurVer"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/textView24"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView23"
        android:layout_alignStart="@+id/textView23"
        android:layout_alignLeft="@+id/textView23"
        android:layout_marginTop="21dp"
        android:text="@string/appLastVer"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000000" />

    <Button
        android:id="@+id/btCheckUpdates"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btUpdateApp"
        android:layout_alignStart="@+id/textView24"
        android:layout_alignLeft="@+id/textView24"
        android:layout_alignEnd="@+id/btUpdateApp"
        android:layout_alignRight="@+id/btUpdateApp"
        android:background="@android:drawable/btn_default"
        android:text="@string/appUpdateApp" />

    <TextView
        android:id="@+id/txtCurVer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView24"
        android:layout_toEndOf="@+id/textView23"
        android:layout_toRightOf="@+id/textView23"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/txtLastVer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/txtCurVer"
        android:layout_alignLeft="@+id/txtCurVer"
        android:layout_alignTop="@+id/textView24"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#065b03" />
</RelativeLayout>