<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="false"
    android:focusable="false"
    android:orientation="horizontal"
    android:paddingTop="2dp"
    android:paddingBottom="2dp"
    android:screenOrientation="landscape">

    <TextView
        android:id="@+id/ColNomID"
        android:layout_width="0dp"
        android:layout_height="25dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_span="2"
        android:paddingLeft="5sp"
        android:paddingTop="10sp"
        android:paddingBottom="10sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/ColNomGRUPID"
        android:layout_width="0dp"
        android:layout_height="25dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_span="2"
        android:paddingLeft="5sp"
        android:paddingTop="10sp"
        android:paddingBottom="10sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/ColNomSGIID"
        android:layout_width="0dp"
        android:layout_height="25dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_span="2"
        android:paddingLeft="5sp"
        android:paddingTop="10sp"
        android:paddingBottom="10sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/ColNomCod"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ColNomDescr"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-2dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="2dp"
        android:layout_toEndOf="@+id/ColNomPosition"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:gravity="center_vertical|center_horizontal"
        android:paddingStart="5sp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:text="TextView"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/ColNomDescr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btMinus"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/ColNomMP"
        android:layout_toEndOf="@+id/ColNomMH"
        android:clickable="false"
        android:ellipsize="none"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:gravity="left|center_vertical"
        android:lines="2"
        android:maxLines="2"
        android:paddingStart="5sp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:scrollHorizontally="false"
        android:singleLine="false"
        android:textColor="#000" />

    <TextView
        android:id="@+id/ColNomOst"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ColNomPrice"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/ColNomPrice"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:gravity="center_vertical|center_horizontal"
        android:paddingLeft="5sp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:text="TextView"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/ColNomPrice"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btPlus"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/ColNomZakaz"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:gravity="center_vertical|center_horizontal"
        android:paddingLeft="5sp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:text="TextView"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/ColNomVkorob"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ColNomOst"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/ColNomOst"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:gravity="center_vertical|center_horizontal"
        android:paddingLeft="5sp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/ColNomMP"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ColNomVkorob"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/ColNomVkorob"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:gravity="center_vertical|center_horizontal"
        android:paddingLeft="5sp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/ColNomMH"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ColNomDescr"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/ColNomCod"
        android:gravity="center_vertical|center_horizontal"
        android:text="     "
        android:textAlignment="center"
        android:textColor="#923a3a" />

    <TextView
        android:id="@+id/ColNomPosition"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ColNomCod"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:gravity="center_vertical|center_horizontal"
        android:text="     "
        android:textAlignment="center"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/ColNomZakaz"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ColNomID"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/rounded_corner"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:gravity="center_vertical|center_horizontal"
        android:paddingTop="0dp"
        android:paddingBottom="0dp"
        android:textColor="#004706" />

    <Button
        android:id="@+id/btPlus"
        android:layout_width="35dp"
        android:layout_height="30dp"
        android:layout_below="@+id/ColNomZakaz"
        android:layout_alignParentEnd="true"
        android:background="@drawable/ic_add"
        android:backgroundTint="@android:color/holo_green_dark"
        android:focusable="false"
        android:minWidth="30dp"
        android:minHeight="30dp"
        android:textColor="@android:color/black"
        android:theme="@android:style/Widget.Holo.Light.Button" />

    <Button
        android:id="@+id/btMinus"
        android:layout_width="35dp"
        android:layout_height="30dp"
        android:layout_below="@+id/ColNomZakaz"
        android:layout_toEndOf="@+id/ColNomPrice"
        android:background="@drawable/ic_remove"
        android:backgroundTint="@android:color/holo_red_dark"
        android:focusable="false"
        android:minWidth="30dp"
        android:minHeight="30dp"
        android:theme="@android:style/Widget.Holo.Light.Button" />

</RelativeLayout>
