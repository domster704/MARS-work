<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:orientation="vertical"
        android:padding="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp">

            <TextView
                    android:id="@+id/chkDB"
                    android:layout_width="@dimen/updateChkWidth"
                    android:layout_height="match_parent"
                    android:layout_alignBottom="@+id/tbDBPerc"
                    android:gravity="center_vertical"
                    android:paddingEnd="10dp"
                    android:text="@string/chkDB"
                    android:textColor="#000" />

            <TextView
                android:id="@+id/tbDBPerc"
                android:layout_width="@dimen/percWidth"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/chkDB"
                android:gravity="end|center_vertical"
                android:paddingStart="4dp"
                android:text="@string/zeroPerc"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <ProgressBar
                android:id="@+id/pgDB"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignBottom="@+id/tbDBPerc"
                android:layout_toStartOf="@+id/tvDBCount"
                android:layout_toEndOf="@+id/tbDBPerc"
                android:paddingStart="10dp"
                android:paddingEnd="10dp" />

            <TextView
                android:id="@+id/tvDBCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:gravity="start"
                android:paddingStart="4dp"
                android:paddingEnd="10dp"
                android:text="@string/hundredPerc"
                android:textAppearance="?android:attr/textAppearanceMedium" />
        </RelativeLayout>

        <Button
                android:id="@+id/btnDBUpdate"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginVertical="2dp"
                android:layout_marginStart="100dp"
                android:gravity="center_horizontal|center_vertical"
                android:text="Обновить базу данных" />

        <TextView
                android:id="@+id/newVerDB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btnDBUpdate"
                android:layout_marginVertical="2dp"
                android:layout_marginStart="110dp"
                android:textColor="@color/black"
                android:text="Новая версия"
                android:visibility="gone"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="2dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="2dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/chkApp"
                android:layout_width="@dimen/updateChkWidth"
                android:layout_height="match_parent"
                android:layout_alignBottom="@+id/tvAppPerc"
                android:gravity="center_vertical"
                android:paddingEnd="10dp"
                android:text="@string/chkApp"
                android:textColor="#000" />

            <!--            <LinearLayout-->
            <!--                android:id="@+id/pgAppLayout"-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="match_parent"-->
            <!--                android:orientation="horizontal">-->
            <!--                &lt;!&ndash;                android:visibility="invisible"&ndash;&gt;-->
            <!--                &lt;!&ndash;                >&ndash;&gt;-->

            <TextView
                android:id="@+id/tvAppPerc"
                android:layout_width="@dimen/percWidth"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/chkApp"
                android:gravity="end|center_vertical"
                android:paddingStart="4dp"
                android:text="@string/zeroPerc"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <ProgressBar
                android:id="@+id/pgApp"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignBottom="@+id/tvAppPerc"
                android:layout_toStartOf="@+id/tvAppCount"
                android:layout_toEndOf="@+id/tvAppPerc"
                android:paddingStart="10dp"
                android:paddingEnd="10dp" />

            <TextView
                android:id="@+id/tvAppCount"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignBottom="@+id/tvAppPerc"
                android:layout_alignParentEnd="true"
                android:gravity="start"
                android:paddingStart="4dp"
                android:paddingEnd="10dp"
                android:text="@string/hundredPerc"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <!--        </LinearLayout>-->
        </RelativeLayout>

        <Button
            android:id="@+id/btnAppUpdate"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="2dp"
            android:layout_marginStart="100dp"
            android:gravity="center_horizontal|center_vertical"
            android:text="Обновить Приложение" />

        <TextView
                android:id="@+id/newVerApp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btnDBUpdate"
                android:layout_marginVertical="2dp"
                android:layout_marginStart="110dp"
                android:textColor="@color/postDataColorGreen"
                android:text="@string/newVersionAvailable"
                android:visibility="gone"/>
    </LinearLayout>


</LinearLayout>
