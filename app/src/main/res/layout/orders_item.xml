<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <!--    <CheckBox-->
    <!--        android:id="@+id/chk"-->
    <!--        android:layout_width="wrap_content"-->
    <!--        android:layout_height="match_parent"-->
    <!--        android:layout_alignBottom="@+id/ColOrdStatus"-->
    <!--        android:layout_alignParentStart="true" />-->
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/ColOrdDocNo"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/heightOfOrdersItem"
                android:gravity="center_vertical|center_horizontal"
                android:textColor="#000000"
                android:visibility="invisible" />

        <TextView
                android:id="@+id/ColOrdStatus"
                android:layout_width="120dp"
                android:layout_height="@dimen/heightOfOrdersItem"
                android:layout_alignParentTop="true"
                android:gravity="center_vertical|center_horizontal"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#000000" />

        <TextView
                android:id="@+id/ColOrdDocDate"
                android:layout_width="120dp"
                android:layout_height="@dimen/heightOfOrdersItem"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/ColOrdStatus"
                android:gravity="center_vertical|center_horizontal"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#000000" />

        <TextView
                android:id="@+id/ColOrdDeliveryDate"
                android:layout_width="120dp"
                android:layout_height="@dimen/heightOfOrdersItem"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/ColOrdDocDate"
                android:gravity="center_vertical|center_horizontal"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#000000" />

        <TextView
                android:id="@+id/ColOrdContr"
                android:layout_width="200dp"
                android:layout_height="@dimen/heightOfOrdersItem"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/ColOrdDeliveryDate"
                android:gravity="left|center_vertical"
                android:paddingLeft="15dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#000000" />

        <TextView
                android:id="@+id/ColOrdAddr"
                android:layout_width="@dimen/buttonWidth"
                android:layout_height="@dimen/heightOfOrdersItem"
                android:layout_alignParentTop="true"
                android:layout_toStartOf="@+id/ColOrdSum"
                android:layout_toEndOf="@+id/ColOrdContr"
                android:gravity="start|center_vertical"
                android:paddingStart="15dp"
                android:maxLines="2"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#000000" />

        <ImageView
                android:id="@+id/showData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/enter_black_icon"
                android:background="@null"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginHorizontal="@dimen/marginWidthEnter"
                android:layout_marginVertical="@dimen/marginHeightEnter"/>

        <TextView
                android:id="@+id/ColOrdSum"
                android:layout_width="100dp"
                android:layout_height="@dimen/heightOfOrdersItem"
                android:layout_alignParentTop="true"
                android:layout_toStartOf="@+id/showData"
                android:gravity="center_vertical|center_horizontal"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#000000" />
    </RelativeLayout>

    <LinearLayout
            android:id="@+id/expandedData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/journal_data_style"
            android:visibility="gone"
            android:layout_marginBottom="4dp"
            android:animateLayoutChanges="true">

        <LinearLayout
                android:id="@+id/commentLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="4dp">

            <TextView
                    android:id="@+id/commentHeader"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|start"
                    android:paddingStart="15dp"
                    android:text="Комментарий"
                    android:textColor="#011"
                    android:textSize="13sp" />

            <TextView
                    android:id="@+id/ColOrdComment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#011"
                    android:textSize="13sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>