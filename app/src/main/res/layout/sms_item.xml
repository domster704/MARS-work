<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
            android:id="@+id/ColSMSDate"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:gravity="center_vertical|center_horizontal"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#000000" />

    <TextView
            android:id="@+id/ColSMSTime"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/ColSMSDate"
            android:layout_toRightOf="@+id/ColSMSDate"
            android:gravity="left|center_vertical"
            android:paddingLeft="15dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#000000" />

    <TextView
            android:id="@+id/ColSMSHead"
            android:layout_width="500dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/btMarkAsRead"
            android:layout_toLeftOf="@+id/btMarkAsRead"
            android:layout_toRightOf="@+id/ColSMSTime"
            android:gravity="left|center_vertical"
            android:textColor="#000000" />

    <TextView
            android:id="@+id/ColSMSMessage"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ColSMSDate"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_toEndOf="@+id/ColSMSTime"
            android:layout_toRightOf="@+id/ColSMSTime"
            android:gravity="left|center_vertical"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#000000" />

    <Button
            android:id="@+id/btMarkAsRead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/ColSMSMessage"
            android:layout_alignRight="@+id/ColSMSMessage"
            android:layout_alignParentTop="true"
            android:background="@android:drawable/btn_default"
            android:clickable="false"
            android:focusable="false"
            android:text="Скрыть"
            android:visibility="visible" />

    <TextView
            android:id="@+id/ColSMSID"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_alignBottom="@+id/btMarkAsRead"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:gravity="center_vertical|center_horizontal"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#000000"
            android:visibility="invisible" />
</RelativeLayout>