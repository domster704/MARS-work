<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:screenOrientation="landscape"
        android:weightSum="1">

    <LinearLayout
            android:id="@+id/checkboxLayout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="31dp"
            android:orientation="vertical"
            />

    <ViewFlipper
            android:id="@+id/viewflipper"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="6dp">

        <RelativeLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/orders_journal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:longClickable="false"
                android:orientation="horizontal"
                android:screenOrientation="landscape"
                android:weightSum="1"
                tools:ignore="RedundantNamespace">

            <TextView
                    android:id="@+id/textView18"
                    android:layout_width="120dp"
                    android:layout_height="25dp"
                    android:layout_toEndOf="@+id/textView19"
                    android:background="@drawable/table_header"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="@string/journZakazDate"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#000000" />

            <TextView
                    android:id="@+id/textView21"
                    android:layout_width="200dp"
                    android:layout_height="25dp"
                    android:layout_toEndOf="@+id/textView36"
                    android:layout_toRightOf="@+id/textView36"
                    android:background="@drawable/table_header"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="@string/journContr"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#000000" />

            <TextView
                    android:id="@+id/textView22"
                    android:layout_width="400dp"
                    android:layout_height="25dp"
                    android:layout_toLeftOf="@+id/textView20"
                    android:layout_toRightOf="@+id/textView21"
                    android:background="@drawable/table_header"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="@string/journAddr"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#000000" />

            <GridView
                    android:id="@+id/listSMS"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/textView18"
                    android:layout_alignParentLeft="true" />

            <TextView
                    android:id="@+id/textView19"
                    android:layout_width="120dp"
                    android:layout_height="25dp"
                    android:layout_alignTop="@+id/textView18"
                    android:layout_alignParentLeft="true"
                    android:background="@drawable/table_header"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="@string/journStatus"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#000000" />

            <TextView
                    android:id="@+id/textView20"
                    android:layout_width="120dp"
                    android:layout_height="25dp"
                    android:layout_above="@+id/listSMS"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/table_header"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="@string/journSum"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#000000" />

            <TextView
                    android:id="@+id/textView36"
                    android:layout_width="120dp"
                    android:layout_height="25dp"
                    android:layout_toEndOf="@+id/textView18"
                    android:layout_toRightOf="@+id/textView18"
                    android:background="@drawable/table_header"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="@string/journDeliveryDate"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#000000" />

        </RelativeLayout>

        <RelativeLayout
                android:id="@+id/ordersdt_details"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:orientation="horizontal"
                android:screenOrientation="landscape">

            <TextView
                    android:id="@+id/textView23"
                    android:layout_width="100dp"
                    android:layout_height="25dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/table_header"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="@string/nomenCod"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#000000" />

            <TextView
                    android:id="@+id/textView27"
                    android:layout_width="fill_parent"
                    android:layout_height="25dp"
                    android:layout_alignParentTop="true"
                    android:layout_toLeftOf="@+id/txtLastVer"
                    android:layout_toRightOf="@+id/textView23"
                    android:background="@drawable/table_header"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="15dp"
                    android:text="@string/nomenDescr"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#000000" />

            <TextView
                    android:id="@+id/txtLastVer"
                    android:layout_width="100dp"
                    android:layout_height="25dp"
                    android:layout_above="@+id/listOrdersDt"
                    android:layout_toLeftOf="@+id/txtCurVer"
                    android:background="@drawable/table_header"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="@string/nomenQty"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#000000" />

            <TextView
                    android:id="@+id/txtCurVer"
                    android:layout_width="100dp"
                    android:layout_height="25dp"
                    android:layout_alignParentTop="true"
                    android:layout_toLeftOf="@+id/textView24"
                    android:background="@drawable/table_header"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="@string/nomenPrice"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#000000" />

            <TextView
                    android:id="@+id/textView24"
                    android:layout_width="100dp"
                    android:layout_height="25dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/table_header"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="@string/nomenSum"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#000000" />

            <GridView
                    android:id="@+id/listOrdersDt"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_below="@+id/textView23"
                    android:layout_alignParentLeft="true" />

        </RelativeLayout>

    </ViewFlipper>
</LinearLayout>