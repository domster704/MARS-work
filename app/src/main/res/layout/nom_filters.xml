<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="15dp"
    android:paddingTop="15dp"
    android:paddingEnd="15dp"
    android:paddingRight="15dp"
    android:screenOrientation="landscape"
    android:weightSum="1">

    <TextView
        android:id="@+id/tvWC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:minHeight="35dp"
        android:text="@string/lblFilterWC"
        android:textColor="@android:color/black"
        android:textSize="@dimen/nomFilterTextSize" />

    <TextView
        android:id="@+id/tvFocus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvWC"
        android:layout_alignStart="@+id/tvWC"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:minHeight="35dp"
        android:text="@string/lblFilterFocus"
        android:textColor="@android:color/black"
        android:textSize="@dimen/nomFilterTextSize" />

    <Spinner
        android:id="@+id/spinFocus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tvFocus"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_toEndOf="@+id/tvWC"
        android:minHeight="35dp"
        android:textAlignment="center" />

    <Spinner
            android:id="@+id/spinWC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tvWC"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="10dp"
            android:layout_toEndOf="@+id/tvWC"
            android:minHeight="35dp"
            android:textAlignment="center" />

</RelativeLayout>